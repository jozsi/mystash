{
  "name": "mystash",
  "version": "0.1.0",
  "description": "Personal finance app",
  "main": "index.js",
  "engines": {
    "node": "8"
  },
  "scripts": {
    "build": "npm run rs:build",
    "dev": "npm-run-all --print-label --parallel --race watch:api rs:start",
    "env": "node ./src/backend/env.js",
    "lint": "eslint --ignore-path=.gitignore --ext .js,.jsx .",
    "rs:build": "react-scripts build",
    "rs:start": "PORT=3001 FORCE_COLOR=1 react-scripts start",
    "rs:test": "react-scripts test --coverage --runInBand",
    "start": "node index.js",
    "test": "npm-run-all env lint rs:test",
    "watch:api": "nodemon index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jozsi/mystash.git"
  },
  "keywords": [
    "personal",
    "finance"
  ],
  "author": "Jozsi Gergely & Radu Lucaciu",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/jozsi/mystash/issues"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "currency-formatter": "^1.3.1",
    "dotenv-safe": "^4.0.4",
    "isemail": "^3.0.0",
    "jsonwebtoken": "^8.1.0",
    "koa": "^2.4.1",
    "koa-bodyparser": "^4.2.0",
    "koa-connect-history-api-fallback": "^0.3.1",
    "koa-jwt": "^3.3.0",
    "koa-router": "^7.3.0",
    "koa-static": "^4.0.2",
    "mongoose": "^4.13.8",
    "npm-run-all": "^4.1.2"
  },
  "devDependencies": {
    "codecov": "^3.0.0",
    "dot-prop-immutable": "^1.4.0",
    "escape-string-regexp": "^1.0.5",
    "eslint-plugin-jest": "^21.5.0",
    "grommet": "^1.9.0",
    "grommet-addons": "^0.6.0",
    "moment": "^2.20.1",
    "nodemon": "^1.14.6",
    "object.omit": "^3.0.0",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.1.0",
    "redux": "^3.7.2",
    "redux-api-middleware": "^2.0.1",
    "redux-devtools": "^3.4.1",
    "redux-devtools-dock-monitor": "^1.1.3",
    "redux-devtools-log-monitor": "^1.4.0",
    "redux-persist": "^5.4.0",
    "redux-thunk": "^2.2.0",
    "supertest": "^3.0.0",
    "webpack": "^3.10.0"
  },
  "proxy": "http://localhost:3000"
}
