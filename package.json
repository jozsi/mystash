{
  "name": "mystash",
  "version": "0.1.0",
  "description": "Personal finance app",
  "main": "index.js",
  "engines": {
    "node": "8"
  },
  "scripts": {
    "build": "npm run rs:build",
    "dev": "npm-run-all --print-label --parallel --race watch:api rs:start",
    "env": "node ./src/backend/env.js",
    "lint": "eslint --ignore-path=.gitignore --ext .js,.jsx .",
    "rs:build": "react-scripts build",
    "rs:start": "PORT=3001 FORCE_COLOR=1 react-scripts start",
    "rs:test": "react-scripts test --coverage --runInBand",
    "start": "node index.js",
    "test": "npm-run-all env lint rs:test",
    "watch:api": "nodemon index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jozsi/mystash.git"
  },
  "keywords": [
    "personal",
    "finance"
  ],
  "author": "Jozsi Gergely & Radu Lucaciu",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/jozsi/mystash/issues"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "currency-formatter": "^1.2.1",
    "dotenv-safe": "^4.0.4",
    "isemail": "^3.0.0",
    "jsonwebtoken": "^7.4.3",
    "koa": "^2.3.0",
    "koa-bodyparser": "^4.2.0",
    "koa-connect-history-api-fallback": "^0.3.1",
    "koa-jwt": "^3.2.2",
    "koa-router": "^7.2.1",
    "koa-static": "^4.0.1",
    "mongoose": "^4.11.8",
    "npm-run-all": "^4.1.0"
  },
  "devDependencies": {
    "codecov": "^2.3.0",
    "escape-string-regexp": "^1.0.5",
    "eslint": "^4.5.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-flowtype": "^2.35.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jest": "^20.0.3",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.3.0",
    "grommet": "^1.7.0",
    "grommet-addons": "^0.4.0",
    "moment": "^2.18.1",
    "nodemon": "^1.11.0",
    "object.omit": "^2.0.1",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.0.11",
    "redux": "^3.7.2",
    "redux-api-middleware": "^2.0.0-beta.3",
    "redux-devtools": "^3.4.0",
    "redux-devtools-dock-monitor": "^1.1.2",
    "redux-devtools-log-monitor": "^1.3.0",
    "redux-persist": "^4.9.1",
    "redux-thunk": "^2.2.0",
    "supertest": "^3.0.0",
    "webpack": "^3.5.5"
  },
  "proxy": "http://localhost:3000"
}
